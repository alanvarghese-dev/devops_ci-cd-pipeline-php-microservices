# PHP Microservices Environment Configuration
# Copy this file to .env and update values

# =======================
# Database Configuration
# =======================
DB_HOST=database
DB_PORT=3306
DB_DATABASE=microservices_db
DB_USERNAME=root
DB_PASSWORD=your_secure_password_here
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# =======================
# Application Settings
# =======================
APP_NAME="PHP Microservices"
APP_ENV=local  # local, testing, production
APP_DEBUG=true
APP_URL=http://localhost
APP_KEY=

# =======================
# Service Ports
# =======================
API_PORT=9000
FRONTEND_PORT=3000
NGINX_PORT=8081
PROMETHEUS_PORT=9090
GRAFANA_PORT=9001

# =======================
# Redis Cache
# =======================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =======================
# Monitoring
# =======================
PROMETHEUS_USER=admin
PROMETHEUS_PASSWORD=prometheus_password
GRAFANA_USER=admin
GRAFANA_PASSWORD=grafana_password

# =======================
# Security
# =======================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=60
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081

# =======================
# Logging
# =======================
LOG_CHANNEL=stack
LOG_LEVEL=debug

# =======================
# Mail (Optional)
# =======================
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# =======================
# Docker Network
# =======================
DOCKER_NETWORK=php-microservices-network

# =======================
# CI/CD Specific (for GitHub Actions)
# =======================
CI_MODE=false
CI_DB_PASSWORD=ci_test_password
CI_API_PORT=19000
CI_FRONTEND_PORT=13000
CI_NGINX_PORT=18081
CI_PROMETHEUS_PORT=19090
